{% set props = ({
  class: "",
  validate: "",
  name: "",
  value: "",
  children: "",
})|merge(props ?: {}) %}

<label class="radio js-radio group{{ props.class ? " " ~ props.class }}">
  <input 
    class="radio__input js-radio-field" 
    name="{{ props.name }}" 
    value="{{ props.value }}" 
    type="radio"
    {{ props.validate ? " data-validate='" ~ props.validate ~ "'" }}
  >
  <span class="radio__control"></span>
  <div class="radio__content">{{ props.children }}</div>
</label>